<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/Head') -%>

  <body>
    <!-- Page Preloder -->
    <div id="preloder">
      <div class="loader"></div>
    </div>

    <%- include('./partials/Header') -%>
    <!-- Header Section End -->
    <!-- Hero Section Begin -->

    <!-- Hero Section End -->
    <%if(!item.isTerrain){%>
    <section
      class="hero-section home-page set-bg"
      data-setbg="<%=item.images[0]%>"
    >
      <div class="container hero-text text-white">
        <h2><%=item.title%></h2>
      </div>
    </section>
    <%}%> <%if(item.isTerrain){%>
    <section class="hero-section home-page set-bg" data-setbg="/img/foret.jpg">
      <div class="container hero-text text-white">
        <h2><%=item.title%></h2>
      </div>
    </section>
    <%}%>
    <!-- Filter Search Section Begin -->
    <%- include('./partials/Filter') -%>
    <!-- Filter Search Section End -->
    <!-- Single Property Section Begin -->
    <div class="single-property">
      <div class="container">
        <div class="row spad-p">
          <div class="col-lg-12">
            <div class="property-title">
              <h3><%=item.title%></h3>
              <a href="#"
                ><i class="fa flaticon-placeholder"></i><%=item.location%></a
              >
            </div>
            <div class="property-price"></div>
            &nbsp;
            <div class="property-price">
              <p><%=item.status%></p>
              <span
                ><%=item.price + ' Fcfa'%> <%if(item.isTerrain){%><%='/ '+
                item.sizeUnit%> <%}%></span
              ><br />
              <a href="#" class="site-btn btn-line">Ca m'interesse</a>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- Single Property End -->
    <!-- Single Property Deatails Section Begin -->
    <section class="property-details">
      <div class="container">
        <div class="row sp-40 spt-40">
          <div class="col-lg-8">
            <div class="p-ins">
              <div class="row details-top">
                <div class="col-lg-12">
                  <div class="t-details">
                    <div class="register-id"></div>
                    <div class="popular-room-features single-property">
                      <div class="size">
                        <p>Superficie</p>
                        <img src="img/rooms/size.png" alt="" />
                        <i class="flaticon-bath"></i>
                        <span><%=item.size%></span
                        ><span><%=item.sizeUnit%></span>
                      </div>
                      <div class="beds">
                        <p>Pièces</p>
                        <img src="img/rooms/bed.png" alt="" />
                        <span><%if(i.rooms!==0){%><%=i.rooms%><%}%></span>
                      </div>
                      <div class="baths">
                        <p>Salles de bains</p>
                        <img src="img/rooms/bath.png" alt="" />
                        <span><%if(i.baths!==0){%><%=i.baths%><%}%></span>
                      </div>
                      <div class="garage">
                        <p>Garages</p>
                        <img src="img/rooms/garage.png" alt="" />
                        <span><%if(i.garages!==0){%><%=i.garage%><%}%></span>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-lg-12">
                  <div class="property-description">
                    <h4>Description</h4>
                    <p>
                      <%=item.overview%>
                    </p>
                  </div>
                  <%if(item.images.length!==0){%>
                  <section class="popular-room">
                    <div class="row">
                      <div class="container">
                        <div class="row">
                          <div class="col-12">
                            <div class="row">
                              <div class="slider-active owl-carousel">
                                <% for(let i=0; i < item.images.length; i++ ){%>
                                <div
                                  style="height: 550px;"
                                  class="set-bg"
                                  data-setbg="<%=item.images[i]%>"
                                ></div>
                                <%}%>
                              </div>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </section>
                  <%}%>
                  <!--                   <div class="location-map">
                    <h4>Voir La localisation</h4>
                    <iframe
                      src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d107002.020096289!2d-96.80666618302782!3d33.06138629992991!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x864c21da13c59513%3A0x62aa036489cd602b!2sPlano%2C+TX%2C+USA!5e0!3m2!1sen!2sbd!4v1558246953339!5m2!1sen!2sbd"
                      allowfullscreen
                    ></iframe>
                  </div>
 -->
                </div>
              </div>
            </div>
          </div>
          <div class="col-lg-4">
            <div class="row pb-30">
              <div class="col-lg-12">
                <div class="contact-service">
                  VOIR AUSSI
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-lg-12">
                <div class="room-items">
                  <div class="room-img set-bg" data-setbg="img/rooms/4.jpg">
                    <a href="#" class="room-content">
                      <i class="flaticon-heart"></i>
                    </a>
                  </div>
                  <div class="room-text">
                    <div class="room-details">
                      <div class="room-title">
                        <h5>
                          Country Style House with beautiful garden and terrace
                        </h5>
                        <a href="#"
                          ><i class="flaticon-placeholder"></i>
                          <span>Location</span></a
                        >
                      </div>
                    </div>
                    <div class="room-features">
                      <div class="room-info">
                        <div class="size">
                          <p>Lot Size</p>
                          <img src="img/rooms/size.png" alt="" />
                          <i class="flaticon-bath"></i>
                          <span>2561 sqft</span>
                        </div>
                        <div class="beds">
                          <p>Beds</p>
                          <img src="img/rooms/bed.png" alt="" />
                          <span>9</span>
                        </div>
                        <div class="baths">
                          <p>Baths</p>
                          <img src="img/rooms/bath.png" alt="" />
                          <span>2</span>
                        </div>
                        <div class="garage">
                          <p>Garage</p>
                          <img src="img/rooms/garage.png" alt="" />
                          <span>1</span>
                        </div>
                      </div>
                    </div>
                    <div class="room-price">
                      <p>For Sale</p>
                      <span>$345,000</span>
                    </div>
                    <a href="#" class="site-btn btn-line">Détail</a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Single Property Deatails Section End -->
    <!-- Footer Section Begin -->
    <%- include('./partials/Footer') -%>
    <!-- Footer Section End -->

    <!-- Js Plugins -->
    <%- include('./partials/Script')-%>
  </body>
</html>
